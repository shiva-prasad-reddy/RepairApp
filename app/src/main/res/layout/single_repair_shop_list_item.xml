<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shop_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.florent37.expansionpanel.ExpansionHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expansion_headerIndicator="@id/headerIndicator"
            app:expansion_layout="@id/expansionLayout"
            app:expansion_toggleOnClick="true">

            <!-- HEADER -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/upper"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp">


                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/person_image"

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_person_black_24dp"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0.1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />



                    <TextView
                        android:id="@+id/shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="TextView"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/person_image"
                        app:layout_constraintTop_toTopOf="@+id/person_image" />


                    <ImageView
                        android:id="@+id/faorite_image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="12dp"
                        android:scaleType="fitCenter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_favorite_black_24dp" />

                    <TextView
                        android:id="@+id/favorite_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1200"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="@+id/faorite_image"
                        app:layout_constraintStart_toStartOf="@+id/faorite_image"
                        app:layout_constraintTop_toBottomOf="@+id/faorite_image"
                        tools:layout_editor_absoluteX="291dp"
                        tools:layout_editor_absoluteY="70dp" />

                    <TextView
                        android:id="@+id/shop_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="TextView"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@+id/shop_name"
                        app:layout_constraintTop_toBottomOf="@+id/shop_name" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/headerIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/faorite_image"
                        app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                </android.support.constraint.ConstraintLayout>
            </LinearLayout>


            <!-- HEADER INDICATOR -->


        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/expansionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CONTENT -->

            <android.support.constraint.ConstraintLayout
                android:id="@+id/lower_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/services_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.example.repair.pojo.MyListView
                        android:id="@+id/services_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"></com.example.repair.pojo.MyListView>

                </LinearLayout>

                <ImageView
                    android:id="@+id/contacts_"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/next"
                    app:layout_constraintTop_toBottomOf="@+id/services_list_layout"
                    app:srcCompat="@drawable/ic_call_black_24dp" />

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/contacts_"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/services_list_layout"
                    app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />
            </android.support.constraint.ConstraintLayout>


        </com.github.florent37.expansionpanel.ExpansionLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>